    <div class="container" id="signup-container" >
        <div class="form-container">
            <div class="form-header">
                <h2>Sign Up</h2>
                <% if (error) { %>
                    <div class="error"><%= error %></div>
                <% } %>
            </div>
            <form id="signup-form" action="/signup" method="POST">
                <label for="full-name">Full Name</label>
                <input type="text" id="full-name" name="fullName" placeholder="Enter your full name" required>

                <label for="email">Email</label>
                <input type="email" id="signup-email" name="email" placeholder="Enter your email" required>

                <label for="user">Username</label>
                <input type="user" id="user" name="username" placeholder="Enter your username" required>

                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required>

                <label for="password">Password</label>
                <input type="password" id="signup-password" name="password" placeholder="Create a password" required>

                <button type="submit">Sign Up</button>
            </form>
            <div class="toggle-link">
                <p>Already have an account? <a href="/login" id="toggle-to-login">Login</a></p>
            </div>
        </div>
    </div>
